<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Session["Id"] == null)
                {
                    @Html.ActionLink("Trang chủ", "Index", "QuanLySachUser", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("Trang chủ", "Index", "QuanLySachUser", new { area = "" }, new { @class = "navbar-brand" })
                }
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        @if (Session["UserName"] != null && Session["IsAdmin"].Equals(true))
                        {
                            @Html.ActionLink("Danh sách sản phẩm", "Index", "QuanLySach")
                        }
                        else
                        {
                            @Html.ActionLink("Danh sách sản phẩm", "Index", "QuanLySachUser")
                        }
                    </li>

                    <li>
                        @if (Session["UserName"] == null)
                        {
                            @Html.ActionLink("Đăng nhập", "Login", "QuanLyAccounts")
                        }
                        else
                        {
                            @Html.ActionLink("Chỉnh sửa thông tin", "ChinhSua", "QuanLyAccounts")
                        }
                    </li>

                    <li>
                        @Html.ActionLink("Giỏ hàng", "Index", "Carts")
                    </li>

                    <li>
                        @if (Session["UserName"] != null)
                        {
                            <h4 style="margin-top:15px">Hello: @Session["UserEmail"], @Html.ActionLink("Đăng xuất", "Logout", "QuanLyAccounts")</h4>
                        }
                        else
                        {
                            @Html.ActionLink("Đăng ký", "Register", "QuanLyAccounts")
                        }
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
